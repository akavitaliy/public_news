<div class="col-lg-8">
<h1>Новый пост</h1>
<% if @post.present? %>
	<% @post.errors.each do |attr, msg| %>
		<div class="alert alert-danger" role="alert">
		<%= msg %>
		</div>	
	<% end %>
<% end %>
<%= form_for :post, url: posts_path do |f| %>
	
	<div class="form-group">
		<%= f.label :topic %> <br>
		<%= f.collection_select :topic, Topic.order(:title), :id, :title, { include_blank: true }, class: 'form-control' %>
	</div>
	
	<div class="form-group">
		<%= f.label :title %><br>
		<%= f.text_field :title, class: 'form-control' %>	
	</div>

	<div class="form-group">
		<%= f.label :body %> <br>
		<%= f.text_area :body, class: 'form-control', rows: "10" %>	
	</div>

	<br>
	<div class="form-group">
		<%= f.submit(action == "edit" ? "Save" : "Create", class: "btn btn-primary") %>
	</div>
<% end %>
</div>