<!-- Blog entries-->
<div class="col-lg-8">
    
        <% if @topic == nil %>
            <h1>Все посты</h1>
            <!-- Featured blog post-->    
            <div class="card mb-4">        
            <a href="#!"> <img class="card-img-top"  src="https://dummyimage.com/850x350/dee2e6/6c757d.jpg" alt="baner"></a>
            <div class="card-body">
                <div class="small text-muted">Саша</div>
                <h2 class="card-title">Featured Post Title</h2>
                <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis aliquid atque, nulla? Quos cum ex quis soluta, a laboriosam. Dicta expedita corporis animi vero voluptate voluptatibus possimus, veniam magni quis!</p>
                <a class="btn btn-primary" href="#!">Read more →</a>
            </div>
            </div>
        <%else%>
            <h1><%= @topic.title %></h1>
        <% end %>
    <!-- Nested row for non-featured blog posts-->
    <div class="row">
        <% @posts.each do |post| %>
        <div class="col-lg-6">
            <!-- Blog post-->
            <div class="card mb-4">
                <a href="#!"><img class="card-img-top" src="https://dummyimage.com/700x350/dee2e6/6c757d.jpg" alt="..." /></a>
                <div class="card-body">
                    <div class="small text-muted">Опубликованно: <%= post.created_at %></div>
                    <h2 class="card-title h4"><%= post.title %></h2>
                    <p class="card-text"><%= post.body %></p>
                    <p><%= link_to "Перейти", post_path(post), class: "btn btn-primary" %></p>
                </div>                
            </div>            
        </div>  
        <% end %>              
    </div>
    <!-- Pagination-->
    <nav aria-label="Pagination">
        <hr class="my-0" />
        <ul class="pagination justify-content-center my-4">
            <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
            <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
            <li class="page-item"><a class="page-link" href="#!">2</a></li>
            <li class="page-item"><a class="page-link" href="#!">3</a></li>
            <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
            <li class="page-item"><a class="page-link" href="#!">15</a></li>
            <li class="page-item"><a class="page-link" href="#!">Older</a></li>
        </ul>
    </nav>
</div>